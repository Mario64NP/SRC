<Window x:Class="WpfApp.PlayerDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Player" Height="200" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Label Content="Nick: "/>
            <TextBox Name="txtNick" Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Label Content="Age: "/>
            <TextBox Name="txtAge" Width="101"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="btnOK" Content="OK" Margin="10" IsDefault="True" Click="btnOK_Click"/>
            <Button Name="btnCancel" Content="Cancel" Margin="10" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
